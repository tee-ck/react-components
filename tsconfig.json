{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": [
      "es2015",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "demo-src/**/*.ts",
    "demo-src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}